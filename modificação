#include <stdio.h>


int main(){

    int num1, num2, soma, subtracao, multiplicacao, divisao, resto; 

    printf("Insira o primeiro número: ");
    scanf("%d", &num1);
    printf("Insira o segundo número: ");
    scanf("%d", &num2);


    soma = num1 + num2;
    subtracao = num1 - num2;
    multiplicacao = num1 * num2;
    divisao = num1 / num2;
    resto = num1 % num2;

	printf("\t-----------------------------------\n");
	printf("\t| Número 1  | Valor 2  | Operação |\n");
    printf("\t-----------------------------------\n");
    printf("\t|    %d     | \t  %d    |  \t %d  \n", num1, num2, soma);
    printf("\t|    %d     | \t  %d    |  \t %d    \n", num1, num2, subtracao);
    printf("\t|    %d     | \t  %d    |  \t %d   \n", num1, num2, multiplicacao);
    printf("\t|    %d     | \t  %d    |  \t %d    \n", num1, num2, divisao);
    printf("\t|    %d     | \t  %d    |  \t %d    \n", num1, num2, resto);
    printf("\t------------------------------------\n");
    
    
}
