#include <stdio.h>
 #include <stdlib.h>           
int main() {
   printf("********** \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("********** \n");
    //7 por 5
    printf(" *** \n");
    printf("*   * \n");
    printf("*   * \n");
    printf("*   * \n");
    printf("*   * \n");
    printf("*   * \n");
    printf(" *** \n");
    //9 por 7
    printf("    * \n");
    printf("   *** \n");
    printf("  ***** \n");
    printf(" ******* \n");
    printf("********* \n");
    printf("   * \n");
    printf("   * \n");
    //O losangulo
    printf("-------------\n");
    printf("      *    \n");
    printf("    *  *  \n");
    printf("   *    *");
    printf("  *      * \n");
    printf("   *    * \n");
    printf("    *  * \n");
    printf("      *") ;
  return 0;
}

C-
#include <stdio.h>
int num1,num2;
int main() {
      printf("escreva o primeiro numero: ");
      scantf("%d" &num1);
      printf("escreva o segundo numero: ");
      scantf("%d" &num2);
soma=num1+num2;
sub=num1-num2;
div=num1/num2;
res=num1%num2;
mult=num1*num2;
}
