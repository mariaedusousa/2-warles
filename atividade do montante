#include<stdio.h>
 int aninhos;
 long mon;
 short num_con;

int main(){

printf("informe o numero da conta: ");
scanf("%hd",&num_con);
printf("informe o montante: ");
scanf("%ld",&mon);
printf("informe sua idade: ");
scanf("%d",&aninhos);

if(mon<=5000){
printf("o deposito foi realizado!");    
}else{
    printf("ultrapassou o limite");
}  
}
